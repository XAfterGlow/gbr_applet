    color: #999;
    font-size: 26rpx;
}

.left {
    left: -100rpx;
}

checkbox {
    padding-right: 20rpx;
}

.empty {
    padding: 160rpx 150rpx;
    background: #fff;
}

.empty .btn {
    margin: 0;
    border-radius: 100rpx;
    height: 76rpx;
    line-height: 76rpx;
    width: 280rpx;
    font-size: 30rpx;
